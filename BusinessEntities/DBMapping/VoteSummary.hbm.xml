<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ro.stancescu.CDep.BusinessEntities" assembly="ro.stancescu.CDep.BusinessEntities">
  <class name="VoteSummaryDBE" table="VoteSummary" dynamic-insert="true">
    <id name="Id">
      <generator class="native"/>
    </id>

    <many-to-one name="Session" column="ParliamentarySession" class="ParliamentarySessionDBE"/>
    <property name="Chamber" column="Chamber"/>
    <property name="VoteIDCDep" column="VoteIDCDep"/>
    <property name="VoteTime" column="VoteTime"/>
    <property name="Description" column="Description" type="AnsiString" length="1000000"/>
    <property name="CountPresent" column="CountPresent"/>
    <property name="CountHaveNotVoted" column="CountHaveNotVoted"/>
    <property name="CountVotesYes" column="CountVotesYes"/>
    <property name="CountVotesNo" column="CountVotesNo"/>
    <property name="CountAbstentions" column="CountAbstentions"/>
    <property name="ProcessingComplete" column="ProcessingComplete"/>
    
    <set name="Votes" inverse="true" cascade="all">
      <key column="Vote"/>
      <one-to-many class="VoteDetailDBE"/>
    </set>

  </class>
</hibernate-mapping>